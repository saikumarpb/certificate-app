generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id Int @id @default(autoincrement())
  email String
  name String
  password_hash String
  profile profile?
}

model profile {
  id Int @id @default(autoincrement())
  bio String?
  user user @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id Int @unique
}